# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

# PHP PSR-2 Coding Standards
# http://www.php-fig.org/psr/psr-2/

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.{js,scss}]
indent_style = space
indent_size = 2

[**.php]
indent_style = space
indent_size = 4

[**.{html,twig}]
indent_style = space
indent_size = 2
