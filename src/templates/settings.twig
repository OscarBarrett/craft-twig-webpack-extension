{% import '_includes/forms' as forms %}

{{ forms.textField({
  label: 'Output Directory',
  id: 'outputDir',
  name: 'outputDir',
  value: settings['outputDir']})
}}

{{ forms.textField({
  label: 'Manifest Path',
  id: 'manifestPath',
  name: 'manifestPath',
  value: settings['manifestPath']})
}}

{{ forms.textField({
  label: 'JS Path',
  id: 'jsPath',
  name: 'jsPath',
  value: settings['jsPath']})
}}

{{ forms.textField({
  label: 'CSS Path',
  id: 'cssPath',
  name: 'cssPath',
  value: settings['cssPath']})
}}
